<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="28dp"
    tools:context=".ResultActivity">

    <TextView
        android:textColor="@color/purple_200"
        android:layout_marginTop="16dp"
        android:text="Your BMI is:"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/textview_result"
        android:textColor="@color/teal_700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        tools:text="27.104"
        android:textAlignment="center"
        android:maxLength="5"
        android:textSize="38sp"/>

    <TextView
        android:id="@+id/textview_classificacao"
        android:textColor="@color/purple_200"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Type: Normal"
        tools:text="Type: Normal"/>

    <TextView
        android:layout_marginTop="30dp"
        android:textColor="@color/teal_700"
        android:layout_marginBottom="10dp"
        android:text="SEE FULL TABLE BELOW:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:text="Below 18.5 - Underweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:text="Between 18.5 and 24.9 - Normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:text="Between 25 and 29.0 - Overweight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:text="Between 30 and 39.9 - Obese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textColor="@color/teal_700"
        android:text="Over 40 - Extremely Obese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>